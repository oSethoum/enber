package routes

import (
	"app/handlers"

	"github.com/gofiber/fiber/v2"
)

func Init(app *fiber.App) {
	{{- range .QueryNodes}}
		{{camel .Name}} := app.Group("/{{.Name}}")
		{{camel .Name}}.Get("/", handlers.Query{{.Name}})
		{{camel .Name}}.Get("/:id", handlers.Find{{.Name}})
		{{camel .Name}}.Post("/", handlers.Create{{.Name}})
		{{camel .Name}}.Patch("/", handlers.Update{{.Name}})
		{{camel .Name}}.Delete("/", handlers.Delete{{.Name}})
  {{end}}
}